{% extends 'AppBundle:default:index.html.twig' %}

{% block body %}
	<br>
	<div role="toolbar">
		<div class="form-group">
			{{ form_start(form) }}
			{{ form_widget(form.text) }}
			{{ form_widget(form.search) }}
			{{ form_end(form) }}
		</div>
	</div>
	<br>
    <div class="list-group">
    	{% for lot in lots %}
	        <div class="list-group-item">
	        	<h4 class="list-group-item-heading">Lot Id: {{ lot.lotid }}</h4>
	        	<p class="list-group-item-text">
	        		Name: {{ lot.name }}
	        	</p>
	        </div>
	    {% else %}
	        <div class="list-group-item">No lots found</div>
	    {% endfor %}
    </div>
{% endblock %}